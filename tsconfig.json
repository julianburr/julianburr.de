{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["es5", "es6", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./**/node_modules"]
}
